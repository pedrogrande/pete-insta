<p id="notice"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <img src="<%= @profile.pic %>" class="card-img-top" alt="Users profile pic">
  <div class="card-body">
    <h5 class="card-title"><%= @profile.first_name %> <%= @profile.last_name %></h5>
    <p class="card-text"><%= @profile.bio %></p>
    <%= link_to 'Edit', edit_profile_path(@profile), class: 'btn btn-warning' %>
  </div>
</div>
